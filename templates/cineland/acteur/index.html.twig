{% extends 'base.html.twig' %}

{% block title %}Cineland - Acteurs{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid text-center bg-dark text-white">
        <div class="container">
            {{ form_start(formulaire) }}
            <div class="form-row justify-content-md-center">
                <div class="col-6">
                    {{ form_row(formulaire.film) }}
                </div>
                <div class="col-6">
                    {{ form_row(formulaire.filmMin) }}
                </div>
                <div class="col">
                    <button class="btn btn-light">Rechercher</button>
                </div>
            </div>
            {{ form_end(formulaire) }}
        </div>
    </div>
    <div class="container text-center mt-5">
        <h1 class="display-4 mb-5">Les acteurs</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row">
            {% for acteur in acteurs %}
                <div class="col-md-4 mb-5">
                    <div class="card">
                        <div class="card-body">
                            <a href="{{ path('detail_acteur', {id: acteur.id}) }}">
                                <h5 class="card-title">{{ acteur.nomPrenom }}</h5>
                            </a>
                            <a href="{{ path('modifier_acteur', {id: acteur.id}) }}" class="btn btn-info">⚙️</a>
                            <a href="{{ path('supprimer_acteur', {id: acteur.id}) }}" class="btn btn-danger">❌</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ajouter</h5>
                        <a href="{{ path('ajouter_acteur') }}" class="btn btn-success">➕</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
